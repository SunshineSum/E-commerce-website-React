@import "../../common/stylus/mixins.styl"

#footer
  top-border-1px(#e4e4e4)
  position fixed
  z-index 100
  left 0
  right 0
  bottom 0
  background-color #fff
  width 100%
  height 98px
  display flex
  padding 13px 0 14px 0
  box-sizing border-box
  .active
    color #b4282d
  a
    display flex
    flex 1
    text-align center
    flex-direction column
    align-items center
    margin 5px
    color #999999
    width 48px
    height 78px
    box-sizing border-box
    &.on
      color #b4282d
    span
      font-size 12px
      margin-top 2px
      margin-bottom 2px
      .iconfont
        font-size 40px
